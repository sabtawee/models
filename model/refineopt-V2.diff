+void refine_setdropitem_option(item *item, int rndopt) {
+	if (!item)
+		return;
+
+	std::shared_ptr<s_random_opt_group> group = random_option_group.find(rndopt);
+
+	if (group != nullptr) {
+		// Apply Must options
